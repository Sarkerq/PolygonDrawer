<Window x:Class="GK1.SetAngle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GK1"
        mc:Ignorable="d"
        Title="SetAngle" Height="180" Width="320" Topmost="True">
	<Grid>
		<TextBox x:Name="degrees" Height="27" Margin="130,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="42" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
		<Label Content="Force angle to be:" HorizontalAlignment="Left" Height="40" Margin="20,20,0,0" VerticalAlignment="Top" Width="110"/>
		<Label Content="degrees" HorizontalAlignment="Left" Height="40" Margin="175,20,0,0" VerticalAlignment="Top" Width="60"/>
		<Button x:Name="confirm" Content="OK" HorizontalAlignment="Left" Height="30" Margin="240,20,0,0" VerticalAlignment="Top" Width="60" Click="confirm_Click"/>
		<Button x:Name="deleteVertice" Content="Delete this vertice" HorizontalAlignment="Left" Height="30" Margin="70,100,0,0" VerticalAlignment="Top" Width="180" Click="deleteVertice_Click" />
		<Button x:Name="unsetAngle" Content="Unset angle" HorizontalAlignment="Left" Height="30" Margin="70,60,0,0" VerticalAlignment="Top" Width="180" Click="unsetAngle_Click"/>
	</Grid>
</Window>
